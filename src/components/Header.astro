---
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links"></div>
		<div class="social-links">
			<a href="https://linkedin.com/in/abhisekmazumdar" target="_blank" aria-label="LinkedIn">
				<i class="fa-brands fa-linkedin-in" aria-hidden="true"></i>
			</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		text-decoration: none;
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	.social-links i {
		font-size: 30px;
		line-height: 1;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
