---
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="links">
			<div class="internal-links">
				<a href="/uses">uses</a>
			</div>
			<div class="social-links">
				<a href="https://linkedin.com/in/abhisekmazumdar" target="_blank" aria-label="LinkedIn">
					<i class="fa-brands fa-linkedin-in" aria-hidden="true"></i>
				</a>
			</div>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}

	.links {
		display: flex;
		align-items: center;
		gap: 1rem;
		font-weight: bold;
	}

	.internal-links {
		display: flex;
		align-items: center;
		gap: 0.75rem;
	}

	.internal-links a {
		padding: 0.25rem 0.5rem;
		border-radius: 4px;
	}

	.internal-links a:hover {
		background: rgba(var(--accent-rgb, 0, 0, 0), 0.04);
	}

	.social-links a {
		display: flex;
	}
</style>
