---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import ProfileImage from '../assets/abhisek.jpg';
import About from '../content/about.md';
import { Image } from 'astro:assets';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<section class="about">
				<div class="profile">
					<Image src={ProfileImage} alt="Abhisek Mazumdar" class="profile-image" sizes="(max-width: 768px) 120px, 150px" loading="eager" fetchpriority="high" />
					<div class="profile-content">
						<About />
					</div>
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>


<style>
	.about {
		display: flex;
		justify-content: center;
		align-items: center;
		min-height: 60vh;
	}
	.profile {
		display: flex;
		flex-direction: column;
		align-items: center;
		max-width: 800px;
		width: 100%;
		text-align: center;
	}
	.profile-image {
		width: 150px;
		height: 150px;
		border-radius: 50%;
		object-fit: cover;
		margin-bottom: 2rem;
	}
	.profile-content {
		width: 100%;
	}
	.about p {
		line-height: 1.8;
		margin: 0 0 1rem 0;
		text-align: left;
	}
	.links {
		list-style: none;
		padding: 0;
		margin: 1rem 0 0 0;
		display: grid;
		gap: 0.5rem;
	}
	.links a {
		text-decoration: none;
		border-bottom: 2px solid transparent;
		color: var(--black);
	}
	.links a:hover {
		border-bottom-color: var(--accent);
	}
	@media (max-width: 768px) {
		.profile-image {
			width: 120px;
			height: 120px;
		}
	}
</style>
